<h1> Create your listing! </h1>

    <%= form_with model: Listing.new, local: true do |form| %>
    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, type: 'text', class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, type: 'text', class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :address %>
        <%= form.text_field :address, type: 'text', class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :state %>
        <%= form.text_field :state, type: 'text', class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :country %>
        <%= form.text_field :country, type: 'text', class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :bedrooms %>
        <%= form.number_field :bedrooms, type: 'number', class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :price %>
        <%= form.number_field :price, type: 'number', class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :available_from %>
        <%= form.date_field :available_from, type: 'date', min: Date.today, class: "form-control" %>
    </div>


    <div class="form-group">
        <%= form.label :available_to %>
        <%= form.date_field :available_to, type: 'date', min: Date.today + 1, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.file_field :images, type:'file', multiple: true, class:"form-control-file" %>
    </div>
    
    <button type="submit" class="btn btn-primary">Create Listing</button>
    <% end %>
